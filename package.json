{
	"name": "stageplotter",
	"private": true,
	"version": "0.1.0",
	"type": "module",
	"workspaces": [
		"app",
		"app/desktop",
		"marketing",
		"categorizer",
		"packages/*"
	],
	"scripts": {
		"dev": "bun run --filter @stageplotter/app dev",
		"dev:desktop": "bun run --filter @stageplotter/app dev:desktop",
		"dev:marketing": "bun run --filter marketing dev",
		"dev:categorizer": "bun run --filter categorizer dev",
		"build": "bun run --filter @stageplotter/app build",
		"build:desktop": "bun run --filter @stageplotter/app build:desktop",
		"build:marketing": "bun run --filter marketing build",
		"build:categorizer": "bun run --filter categorizer build",
		"check": "bun run --filter @stageplotter/app check",
		"lint": "prettier --check . && eslint .",
		"format": "prettier --write ."
	},
	"devDependencies": {
		"@eslint/compat": "^1.4.0",
		"@eslint/js": "^9.39.1",
		"eslint": "^9.39.1",
		"eslint-config-prettier": "^10.1.8",
		"eslint-plugin-svelte": "^3.13.1",
		"globals": "^16.5.0",
		"prettier": "^3.7.4",
		"prettier-plugin-svelte": "^3.4.0",
		"prettier-plugin-tailwindcss": "^0.7.2",
		"typescript-eslint": "^8.48.1"
	}
}
