{
	"$schema": "https://json-schema.org/draft/2020-12/schema",
	"$id": "https://inputlist.io/specs/item-1.0.0.json",
	"title": "Item",
	"description": "A physical item that can be placed on a stage plot.",
	"type": "object",
	"required": ["id", "name"],
	"properties": {
		"id": { "type": "string", "description": "A unique identifier for the item." },
		"name": { "type": "string", "description": "The item's name (e.g., 'Fender Stratocaster')." },
		"category": {
			"type": "string",
			"description": "The category of the item (e.g., 'guitars', 'amps', 'drums')."
		},
		"provision": {
			"type": "string",
			"enum": ["artist_provided", "venue_provided", "rental"],
			"description": "Who is providing the item."
		},
		"backline_request": {
			"$ref": "gear-preference-1.0.0.json"
		},
		"input_ids": {
			"type": "array",
			"items": { "type": "string" },
			"description": "An array of input IDs generated by this item."
		}
	}
}
