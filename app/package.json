{
	"name": "@stageplotter/app",
	"private": true,
	"version": "0.1.0",
	"type": "module",
	"scripts": {
		"dev": "vite dev",
		"dev:desktop": "bun run prepare-tauri && cd desktop && bun run tauri dev",
		"build": "vite build",
		"build:desktop": "bun run prepare-tauri && cd desktop && bun run tauri build",
		"prepare-tauri": "bun run scripts/prepare-tauri.ts",
		"preview": "vite preview",
		"prepare": "svelte-kit sync || echo ''",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"test:unit": "vitest",
		"test": "vitest run && playwright test",
		"test:e2e": "playwright test",
		"deploy": "bun run build && wrangler pages deploy",
		"preview:cf": "bun run build && wrangler pages dev"
	},
	"devDependencies": {
		"@playwright/test": "^1.57.0",
		"@sveltejs/adapter-cloudflare": "^7.0.0",
		"@sveltejs/kit": "^2.49.1",
		"@sveltejs/vite-plugin-svelte": "^6.2.1",
		"@tailwindcss/forms": "^0.5.10",
		"@tailwindcss/typography": "^0.5.19",
		"@tailwindcss/vite": "^4.1.17",
		"@types/node": "^20",
		"@vitest/browser-playwright": "^4.0.15",
		"playwright": "^1.57.0",
		"svelte": "^5.45.6",
		"svelte-check": "^4.3.4",
		"tailwindcss": "^4.1.17",
		"typescript": "^5.9.3",
		"vite": "^7.2.6",
		"vitest": "^4.0.15",
		"vitest-browser-svelte": "^2.0.1",
		"workbox-window": "^7.4.0",
		"wrangler": "^4"
	},
	"dependencies": {
		"@stageplotter/shared": "workspace:*",
		"@stageplotter/db": "workspace:*",
		"@sqlite.org/sqlite-wasm": "^3.51.2-build4",
		"@vite-pwa/sveltekit": "^1.1.0",
		"bits-ui": "^2.9.1",
		"html2canvas": "^1.4.1",
		"jspdf": "^4.1.0",
		"mode-watcher": "^1.1.0",
		"pdfjs-dist": "^5.4.624",
		"runed": "^0.31.1",
		"selecto": "^1.26.3"
	}
}
